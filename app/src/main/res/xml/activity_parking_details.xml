<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp">

<ImageView
    android:id="@+id/parkingLotImage"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:scaleType="centerCrop"
    android:src="@drawable/parking_lot_placeholder"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/parkingLotName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:text="Parking Lot Name"
    android:textSize="20sp"
    android:textStyle="bold"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/parkingLotImage" />

<TextView
    android:id="@+id/parkingLotAddress"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Address"
    android:layout_marginTop="4dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/parkingLotName" />

</androidx.constraintlayout.widget.ConstraintLayout>
